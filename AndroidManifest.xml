<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kushagrasrivastava.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/category_nowPlaying" />
        <activity
            android:name=".PlayListsActivity"
            android:label="@string/category_playLists" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists" />
        <activity
            android:name=".ListOfAlbumsActivity"
            android:label="@string/category_listofalbums" />
        <activity
            android:name=".ListOfArtistsActivity"
            android:label="@string/category_listofartists" />
        <activity
            android:name=".ListOfSongsActivity"
            android:label="@string/category_listofsongs" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/category_payment" />
        <activity android:name="com.paypal.android.MEP.PayPalActivity"
        android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>
    <uses-sdk android:minSdkVersion="3"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>


</manifest>